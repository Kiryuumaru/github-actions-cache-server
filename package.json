{
  "name": "github-actions-cache-server",
  "type": "module",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "prepare": "nitropack prepare && husky",
    "dev": "nitropack dev",
    "build": "nitropack build",
    "preview": "node .output/server/index.mjs",
    "lint": "eslint --cache . && prettier --check --cache .",
    "lint:ci": "eslint --cache --cache-strategy content . && prettier --check --cache --cache-strategy content .",
    "lint:fix": "eslint --fix --cache . && prettier --write --cache .",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "action": "act --env ACTIONS_CACHE_URL=http://host.docker.internal:3000/test_token/ --container-architecture linux/amd64 -W tests",
    "test:watch": "vitest --watch",
    "test": "start-server-and-test dev 3000 test:unit",
    "test:unit": "vitest run",
    "db:migrate": "drizzle-kit generate:sqlite"
  },
  "changelogithub": {
    "extends": "gh:falcondev-it/configs/changelogithub"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "better-sqlite3": "^9.4.1",
    "consola": "^3.2.3",
    "drizzle-orm": "^0.29.3",
    "minio": "^7.1.3",
    "nitropack": "latest",
    "typescript": "^5.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@eslint/eslintrc": "^3.0.0",
    "@louishaftmann/commitlint-config": "^3.0.0",
    "@louishaftmann/eslint-config": "^3.0.0",
    "@louishaftmann/lintstaged-config": "^3.0.0",
    "@louishaftmann/prettier-config": "^3.0.0",
    "@types/eslint": "^8.56.2",
    "@types/eslint__eslintrc": "^2.1.1",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.56.0",
    "husky": "^9.0.10",
    "ky": "^1.2.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "start-server-and-test": "^2.0.3",
    "vitest": "^1.3.0"
  }
}
